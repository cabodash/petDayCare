<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetDayCare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grass_200</item>
        <item name="colorPrimaryVariant">@color/grass_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_200</item>
        <item name="colorSecondaryVariant">@color/brown_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grass_500</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="roundedImage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="android:background">@drawable/image_item_bg</item>
    </style>
    <style name="customEditText" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:elevation">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/brown_300</item>
        <item name="android:textColorHint">@color/rotten_white</item>
    </style>
    <style name="customEditOptionText" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@drawable/edit_text_dark_bg</item>
        <item name="android:elevation">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/brown_300</item>
        <item name="android:textColorHint">@color/rotten_white</item>
    </style>

</resources>